<!DOCTYPE html>
<html>
  <head>
    <title>To Do List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="bootstrap.min.css">
  </head>
  <body>
  <div class="all">
    <div>
      <h1>今天要做什麼呢?</h1> 
     <form action="/add" method="post" >
      <input type="text" id="bar"  placeholder="New todo" name="addItem">
      <button class="btn">提交</button>
     </form>
    </div>
    <div>
      <h1>待完成</h1>
      <div class="list-group" id="progress_box">
        <% items.forEach(function(item) { %>  
          <% if (!item.done) { %>
            <div class="list-group-item">
              <%= item.item %>
              <div class="operations pull-right">
                <button class="btn btn-primary btn-xs checked-btn" data-id=<%= item._id %>>完成</button>
                <button class="btn btn-danger btn-xs delete-btn" data-id=<%= item._id %>>刪除</button>
              </div>
              
            </div>
          <% } %>
        <% }); %>
      </div>
    </div>
    <div>
      <h1>完成囉</h1>

    </div>
  </div>
  <script src="index.js"></script>
  </body>
</html>
